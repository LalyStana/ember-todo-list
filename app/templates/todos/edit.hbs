<form id="edit-todo-frm">
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" value=model.title placeholder="Add Title"}}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type="date" class="form-control" value=model.date}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea class="form-control" value=model.body placeholder="Add Description"}}
  </div>
  <button {{action 'editTodo' model.id}} class="btn btn-primary">Save</button>
  {{#link-to 'todos' class="btn btn-default"}}Close{{/link-to}}
  <button {{action 'deleteTodo' model.id}} class="btn btn-danger pull-right">Delete</button>
</form>
